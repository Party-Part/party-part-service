    }
  },
  "host": "localhost:8081",
  "basePath": "/v1",
  "tags": [
    {
      "name": "party",
      "description": "Everything about parties",
      "externalDocs": {
        "description": "Find out more",
        "url": "https://github.com/Party-Part"
      }
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/party": {
      "post": {
        "tags": [
          "party"
        ],
        "summary": "Create a new party",
        "description": "",
        "operationId": "createParty",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "userId",
            "type": "string",
            "description": "User who creates the party",
            "required": true
          },
          {
            "in": "formData",
            "name": "name",
            "type": "string",
            "description": "Name of the party",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/party/{partyId}": {
      "get": {
        "tags": [
          "party"
        ],
        "summary": "Get party information by id",
        "description": "",
        "operationId": "getParty",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "partyId",
            "type": "string",
            "description": "The patry id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Party"
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/party/member/{partyId}": {
      "put": {
        "tags": [
          "party"
        ],
        "summary": "Add member to a party",
        "description": "",
        "operationId": "addPartyMember",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "partyId",
            "type": "string",
            "description": "The patry id",
            "required": true
          },
          {
            "in": "formData",
            "name": "userId",
            "type": "string",
            "description": "The user id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/party/enrty/{partyId}": {
      "put": {
        "tags": [
          "party"
        ],
        "summary": "Add enrty to a party",
        "description": "",
        "operationId": "addPartyEntry",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "partyId",
            "type": "string",
            "description": "The patry id",
            "required": true
          },
          {
            "in": "formData",
            "name": "userCreatorId",
            "type": "string",
            "description": "The user creator id",
            "required": true
          },
          {
            "in": "formData",
            "name": "userWhoPaidId",
            "type": "string",
            "description": "The user who paid id",
            "required": true
          },
          {
            "in": "formData",
            "name": "name",
            "type": "string",
            "description": "The entry name"
          },
          {
            "in": "formData",
            "name": "cost",
            "type": "string",
            "description": "The entry cost"
          },
          {
            "in": "formData",
            "name": "currency",
            "type": "string",
            "description": "The entry currency"
          },
          {
            "in": "formData",
            "name": "split",
            "type": "string",
            "description": "Array how to split enrty in format [(\"UserId\", \"percent\"),(...),..]"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    }
  },
  "definitions": {
    "Party": {
      "type": "object",
      "properties": {
        "partyId": {
          "type": "string",
          "description": "Big int party id"
        },
        "userCreatorId": {
          "type": "string",
          "description": "Big int user creator id"
        },
        "name": {
          "type": "string",
          "description": "Name of a party"
        }
      }
    },
    "Entry": {
      "type": "object",
      "properties": {
        "entryId": {
          "type": "string",
          "description": "Big int enrty id"
        },
        "partyId": {
          "type": "string",
          "description": "Big int party id"
        },
        "userCreatorId": {
          "type": "string",
          "description": "Big int user creator id"
        },
        "userWhoPaidId": {
          "type": "string",
          "description": "Big int user who paid for consumption id"
        },
        "name": {
          "type": "string",
          "description": "Name of a consumption"
        },
        "cost": {
          "type": "string",
          "description": "Cunsumption cost"
        },
        "currency": {
          "type": "string",
          "description": "Cunsumption currency"
        },
        "split": {
          "type": "object",
          "description": "A map with key as a user id and value as a user's proportion",
          "additionalProperties": {
            "type": "string",
            "description": "User's proportion"
          }
        }
      }
    }
  }
}